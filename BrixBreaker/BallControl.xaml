<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="CrackOut.BallControl"
	d:DesignWidth="32" d:DesignHeight="32">
	<UserControl.Resources>
	</UserControl.Resources>

        <Ellipse x:Name="Ball" Height="32" Width="32">
            <Ellipse.Fill>
                <RadialGradientBrush 
          GradientOrigin="0.7,0.2" Center=".7,0.2" RadiusX="0.8" RadiusY=".8" >
                    <GradientStop Color="White" Offset="0" />
                    <GradientStop Color="#FF6B6767" Offset="0.55" />
                    <GradientStop Color="#FF292929" Offset="0.95" />
                </RadialGradientBrush >
            </Ellipse.Fill>
        </Ellipse>
</UserControl>